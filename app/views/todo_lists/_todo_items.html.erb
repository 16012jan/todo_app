
<% if item.completed? %>
  <section class="list-task clearfix">
    <div class="task-checkbox">
      <%= link_to complete_todo_list_item_path(todo, item), method: :patch do %>
          <label class="complete"><input type="checkbox" class="toggle" checked ><%= item.title %></label>
      <% end %>
    </div>
    <div class="list-icons clearfix">
      <%= link_to todo_list_item_path(todo, item), method: :delete do %>
          <i class="fa fa-trash"></i>
      <% end %>
      <i class="fa fa-pencil"></i>
      <i class="fa fa-sort"></i>
    </div>
  </section>
<% else %>
  <section class="list-task clearfix">
    <div class="task-checkbox">
      <%= link_to complete_todo_list_item_path( todo, item), method: :patch do %>
          <label><input type="checkbox" class="toggle"><%= item.title %></label>
      <% end %>
    </div>
    <div class="list-icons clearfix">
      <%= link_to todo_list_item_path(todo, item), method: :delete do %>
        <i class="fa fa-trash"></i>
      <% end %>
      <%= link_to edit_todo_list_item_path(todo, item) do %>
        <i class="fa fa-pencil"></i>
      <% end %>
      <i class="fa fa-sort"></i>
    </div>
  </section>
<% end %>

