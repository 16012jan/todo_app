<main class="todo">
  <section class="header">
    <i class="fa fa-calendar"></i>
    <h3 class="list-title"><%= todo.title %></h3>
    <input class="title-input" style="display: none" type="text" onkeyup="changeTitle(event.keyCode, event.target, <%= todo.id %>)"/>
    <a onclick="deleteTodo(event.target, <%= todo.id %>)">
      <i class="fa fa-trash"></i>
    </a>
    <a onclick="showInput(event.target)">
      <i class="fa fa-pencil"></i>
    </a>
  </section>

  <section class="add-task clearfix">
    <i class="fa fa-plus"></i>
    <input id="btn" type="button" value="Add Task" onclick="addTask(event.target, <%= todo.id %>)">
    <input id="task" type="text" placeholder="Start typing here to create a task...">
  </section>
  <div class="list-items">
    <% todo.items.each do |item| %>
      <%= render partial: "todo_items", locals: {item: item, todo: todo } %>
    <% end %>

  </div>
</main>
